platform :ios, '13.0'

use_frameworks! :linkage => :static
use_modular_headers!

# Load a local helper we keep in the repo (no external paths).
helper_path = File.expand_path(File.join(__dir__, 'Flutter', 'podhelper.rb'))
if File.exist?(helper_path)
  require helper_path
else
  # Safe no-ops if helper is missing (build will still run, just without plugins)
  def flutter_ios_podfile_setup; end
  def flutter_install_all_ios_pods(_app_path); end
  def flutter_additional_ios_build_settings(_target); end
end

target 'Runner' do
  flutter_ios_podfile_setup
  # Pass the iOS folder (this fileâ€™s directory) to the helper
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |t|
    flutter_additional_ios_build_settings(t) if defined?(flutter_additional_ios_build_settings)
    t.build_configurations.each do |c|
      c.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
