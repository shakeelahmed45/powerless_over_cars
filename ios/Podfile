platform :ios, '13.0'

use_frameworks! :linkage => :static
use_modular_headers!

# --- Load Flutter's CocoaPods helpers safely (two possible locations) ---
helper_path = File.expand_path(File.join(__dir__, 'Flutter', 'podhelper.rb'))
unless File.exist?(helper_path)
  helper_path = File.expand_path(File.join(__dir__, '..', '.ios', 'Flutter', 'podhelper.rb'))
end
require helper_path
# -----------------------------------------------------------------------

# Set up the Flutter iOS pods (engine etc.)
flutter_ios_podfile_setup

target 'Runner' do
  # Install all plugin pods via Flutter's helper
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Apply Flutterâ€™s recommended build settings
    flutter_additional_ios_build_settings(target)
    # Keep your minimum iOS version consistent
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
